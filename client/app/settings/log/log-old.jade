header(ng-include='"components/navbar/navbar.html"')


.container-fluid
  .row
    .col-sm-3.col-md-2.sidebar(ng-include='"components/sidebar/sidebar.html"', ng-controller='SideBarSettingsCtrl')

    .col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
      .row
        .col-md-6
          h1 hStation Log
        .col-md-6.form-group
          h1
            .col-sm-8.col-sm-offset-4
              input.form-control(type='text', placeholder='Search Messages', ng-model='search.$')

      .row
        .panel.panel-default
          .panel-body
            table#app-log.table.table-striped.table-condensed.table-responsive(table='app-log-table')
              //-- Table header
              thead
                tr.h4
                  th.text-center.col_level(scope='col') Level
                  th.text-center.col_date_time(scope='col') Date & Time
                  th.text-center.col_message(scope='col') Message
              //-- Table body
              tbody
                tr(ng-repeat="log in logs.file")
                  td.col_level.text-center(ng-class='"log-{{ log.level }}"') {{ log.level }}
                  td.col_date_time.text-right {{ log.timestamp | date:'EEE, dd MMM yyyy @ HH:mm:ss'}}
              td.col_message {{ log.message }}

footer.footer(ng-include='"components/footer/footer.html"')
