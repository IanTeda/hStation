      .panel.panel-default
        .panel-heading
          a.btn-block(href='/weather/carbon-monoxide') Carbon Monoxide
        .panel-body.text-center
          h1.reading {{latestWeather.carbonMonoxide}}
          .small {{latestWeather.timestamp | date:'HH:mm EEE, dd MMM yyyy Z'}}
