header(ng-include='"components/navbar/navbar.html"')

.container-fluid
  .row(ng-init="getLatestReadings()")
    .col-md-3.col-sm-6
      .panel.panel-default
        .panel-heading Carbon Monoxide
        .panel-body.text-center
          h1.reading {{latestWeather.carbonMonoxide}}
          .small {{latestWeather.timestamp | date:'HH:mm EEE, dd MMM yyyy Z'}}
    .col-md-3.col-sm-6
      .panel.panel-default
        .panel-heading Dew Point
        .panel-body.text-center
          h1.reading {{latestWeather.dewPoint}}
          .small {{latestWeather.timestamp | date:'HH:mm EEE, dd MMM yyyy Z'}}
    .col-md-3.col-sm-6
      .panel.panel-default
        .panel-heading Dust
        .panel-body.text-center
          h1.reading {{latestWeather.dust}}
          .small {{latestWeather.timestamp | date:'HH:mm EEE, dd MMM yyyy Z'}}
    .col-md-3.col-sm-6
      .panel.panel-default
        .panel-heading Humidity
        .panel-body.text-center
          h1.reading {{latestWeather.humidity | number:0}}
          .small {{latestWeather.timestamp | date:'HH:mm EEE, dd MMM yyyy Z'}}
    .col-md-3.col-sm-6
      .panel.panel-default
        .panel-heading Infra Red
