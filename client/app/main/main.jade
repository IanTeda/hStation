      .panel.panel-default
        .panel-heading Light
        .panel-body.text-center
          h1.reading {{latestWeather.lux | number:0}}
          .small {{latestWeather.timestamp | date:'HH:mm EEE, dd MMM yyyy Z'}}
    .col-md-3.col-sm-6
      .panel.panel-default
        .panel-heading Methane
        .panel-body.text-center
          h1.reading {{latestWeather.methane | number:0}}
          .small {{latestWeather.timestamp | date:'HH:mm EEE, dd MMM yyyy Z'}}
    .col-md-3.col-sm-6
      .panel.panel-default
        .panel-heading Barometric Pressure
        .panel-body.text-center
          h1.reading {{latestWeather.pressure | number:0}}
          .small {{latestWeather.timestamp | date:'HH:mm EEE, dd MMM yyyy Z'}}
    .col-md-3.col-sm-6
      .panel.panel-default
        .panel-heading Temperature
        .panel-body.text-center
