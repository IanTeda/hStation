header(ng-include='"components/navbar/navbar.html"')

.container-fluid
  br
  br
  .row
    div#login-form.well.col-xs-12.col-sm-6.col-sm-offset-3.col-md-6.col-md-offset-3.col-lg-4.col-lg-offset-4
      h1 Login to {{ appInfo.name }}
      form.form(name='form', ng-submit='login(form)', novalidate='novalidate')
        .form-group(ng-class='{"has-error": errors.other === "This email is not registered."}')
          label.control-label Email
          input.form-control(type='email', name='email', ng-model='user.email', placeholder='someone@theuniverse.com', autofocus='autofocus')
          span.help-block(ng-show='errors.other === "This email is not registered."') {{ errors.other }}
        .form-group(ng-class='{"has-error": errors.other === "This password is not correct."}')
          label.control-label Password
          input.form-control(type='password', name='password', ng-model='user.password', placeholder='Password')
          span.help-block(ng-show='errors.other === "This password is not correct."') {{ errors.other }}
        .form-group.has-error
          span.help-block(ng-show='form.email.$error.required && form.password.$error.required && submitted')
            | Please enter your email and password.
        button.btn.btn-lg.btn-primary.col-xs-12(type='submit')  Sign in

footer.footer(ng-include='"components/footer/footer.html"')
