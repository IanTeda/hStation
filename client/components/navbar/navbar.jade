nav.navbar.navbar-default.navbar-static-top(ng-controller='NavbarCtrl', role='navigation')
  div.container-fluid
    div.navbar-header
      button.navbar-toggle(type='button', ng-click='isCollapsed = !isCollapsed')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/') h-station

    div#navbar-main.navbar-collapse.collapse(collapse='isCollapsed')
      ul.nav.navbar-nav
        li(ng-repeat='item in menu', ng-class='{active: isActive(item.link)}')
          a(ng-href='{{item.link}}') {{item.title}}

        li.dropdown
          a.dropdown-toggle(href='#', data-toggle='dropdown')
            | Readings
            span.caret
          ul.dropdown-menu(role='menu')
            li(ng-repeat='item in menuReadings', ng-class='{active: isActive(item.link)}')
              a(ng-href='{{item.link}}') {{item.title}}

      ul.nav.navbar-nav.navbar-right
        li(ng-hide='isLoggedIn()', ng-class='{active: isActive("/login")}')
          a(href='/login') Login

        li.dropdown(ng-show='isLoggedIn()')
          a.dropdown-toggle(data-toggle='dropdown')
            | {{ getCurrentUser().name }}
            b.caret
          ul.dropdown-menu
            li
              a(ui-sref='account') My Account
            li
              a(ng-click='logout()') Logout

        li(ng-show='isLoggedIn()', ng-class='{active: isActive("/admin")}')
          a(href='/admin')
            span.glyphicon.glyphicon-cog